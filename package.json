{
  "name": "react-express-typescript-boilerplate",
  "version": "1.0.0",
  "description": "full stack typescript react/express boilerplate",
  "repository": "https://github.com/BrendonHudnell/react-express-typescript-boilerplate",
  "author": "Brendon Hudnell",
  "license": "MIT",  
  "main": "server/src/server.ts",
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.22",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "install": "cd ./client && yarn install",

    "build": "yarn build:server && yarn build:client",
    "build:client": "cd ./client && yarn build",
    "build:server": "tsc",

    "start": "yarn start:server",
    "start:client": "cd ./client && yarn start",
    "start:server": "node server/build/server.js",

    "dev": "ts-node-dev --respawn --transpile-only server/src/server.ts"
  }
}
